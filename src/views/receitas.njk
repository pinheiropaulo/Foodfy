{% extends "layout.njk" %}
{% block content %}
  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{ item.id}}">
        <img src="{{ item.image }}" alt="Imagem de {{item.title}}"/>
        <div class="text">
          <span id="text_01">{{ item.title }}</span>
          <span id="text_02">por
            {{item.author}}</span>
        </div>
      </div>
    {% endfor %}
  </section>
  <script src="/javascripts/script.js"></script>
{% endblock %}
